<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".TestActivity">

    <com.google.android.material.tabs.TabLayout
        android:id="@+id/myTabLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
<!--        라이브러리 전용은 app: 으로 붙어있음-->
        app:tabIndicatorColor="#000000"
        app:tabIndicatorHeight="3dp"
        app:tabTextColor="#FF0000"
        app:tabSelectedTextColor="#0000FF"
        app:tabGravity="center"
        app:tabMode="fixed"/>

    <androidx.viewpager.widget.ViewPager
        android:id="@+id/testViewPager"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <fragment
                android:id="@+id/firstFrag"
                android:layout_width="300dp"
                android:layout_height="match_parent"
                class="com.tjoeun.a20191112_01_fragment.fragment.FirstFragment" />

            <fragment
                android:id="@+id/secondFrag"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                class="com.tjoeun.a20191112_01_fragment.fragment.SecondFragment" />

        </LinearLayout>

    </HorizontalScrollView>





</LinearLayout>